(provide `haskell-czq)
(setq haskell-module-template "module %s where \n")
(defun insert-haskell-definition (name)
  (interactive "sname:")
  (insert (format "%s :: \n%s = \n" name name))
  (previous-line 2)
  (end-of-line)
  )

(defun insert-haskell-module ()
  (interactive)
  (setq haskell-module-name (file-name-sans-extension (buffer-name)))
  (insert (format haskell-module-template haskell-module-name))
  )